
@{
    ViewBag.Title = "Treemap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Basic Treemap Chart</h4>
                <div id="basic_treemap" class="apex-charts" dir="ltr"></div>
            </div><!-- end cardbody -->
        </div><!--end card-->
    </div><!-- end col -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Multi-Dimensional Treemap Chart</h4>
                <div id="multi_treemap" class="apex-charts" dir="ltr"></div>
            </div><!-- end cardbody -->
        </div><!--end card-->
    </div><!-- end col -->
</div><!-- end row -->

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Distributed Treemap Chart (Different Color for  each Cell)</h4>
                <div id="distributed_treemap" class="apex-charts" dir="ltr"></div>
            </div><!-- end cardbody -->
        </div><!--end card-->
    </div><!-- end col -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Treemap Chart with Color Ranges</h4>
                <div id="color_range_treemap" class="apex-charts" dir="ltr"></div>
            </div><!-- end cardbody -->
        </div><!--end card-->
    </div><!-- end col -->
</div><!-- end row -->
@section scripts{


    <!-- apexcharts -->
    <script src="~/assets/libs/apexcharts/apexcharts.min.js"></script>

    <!-- treecharts init -->
    <script src="~/assets/js/pages/apexcharts-treemap.init.js"></script>

    <script src="~/assets/js/app.js"></script>
}